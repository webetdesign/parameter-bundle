{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% if object.type == 'boolean' %}
        {% if object.value == 1 %}
            <span class="label label-success">oui</span>
        {% else%}
            <span class="label label-danger">non</span>
        {% endif %}
    {% else if object.type != 'file' and object.value is not null %}
        {{ object.value|sonata_truncate(100) }}
    {% else %}
        {{ object.value }}
    {% endif %}
{% endblock %}
